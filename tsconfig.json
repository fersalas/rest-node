{
    "extends": "@tsconfig/node14/tsconfig.json",
  
    "compilerOptions": {
      "preserveConstEnums": true,
      "noImplicitAny": true,
      "target": "es6",  
      "module": "commonjs",  
      "outDir": "dist",  
      "sourceMap": true,  
      "resolveJsonModule": true,  
      "lib": ["es6", "dom"],  
    },
  
    "include": ["app/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }